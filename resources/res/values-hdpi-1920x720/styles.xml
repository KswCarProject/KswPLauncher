<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="audi_mib3_item_txt_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="audi_mib3_set_checkbox">
        <item name="android:background">@drawable/audi_mib3_set_item_ripple</item>
        <item name="android:paddingLeft">115dp</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:button">@null</item>
        <item name="android:thumb">@null</item>
    </style>
    <style name="audi_mib3_set_default_text">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="audi_mib3_set_info_item">
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:background">@drawable/audi_mib3_set_item_ripple</item>
        <item name="android:paddingLeft">115dp</item>
        <item name="android:paddingRight">28dp</item>
    </style>
    <style name="audi_mib3_set_item">
        <item name="android:textColor">@color/audi_mib3_item_text_color</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:background">@drawable/audi_mib3_set_item_ripple</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">27dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:drawableRight">@drawable/audi_mib3_settings_icon</item>
        <item name="android:drawablePadding">17dp</item>
    </style>
    <style name="audi_mib3_set_item_sub">
        <item name="android:textColor">@color/audi_item_text_color</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:background">@drawable/audi_mib3_set_item_ripple</item>
        <item name="android:paddingLeft">115dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:drawableRight">@drawable/audi_mib3_settings_icon</item>
        <item name="android:drawablePadding">17dp</item>
    </style>
    <style name="audi_set_default_text">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
