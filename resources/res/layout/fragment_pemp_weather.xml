                <TextView android:textSize="24sp" android:textColor="@android:color/white" android:gravity="center" android:tag="binding_13" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_marginStart="5dp" style="@style/bmw_id8_text_shadow"/>
            </FrameLayout>
        </RelativeLayout>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="23sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/weather_tv" android:tag="binding_14" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginStart="70dp" android:layout_marginEnd="0dp" style="@style/pemp_id8_text_shadow"/>
        </LinearLayout>
        <ImageView android:id="@+id/iv_icon" android:tag="binding_15" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/temperature" android:layout_alignParentRight="true" android:layout_marginStart="21dp" android:layout_marginEnd="21dp"/>
        <include android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="38dp" android:layout_alignParentBottom="true" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" layout="@layout/include_near_weather"/>
    </RelativeLayout>
</RelativeLayout>
