        <LinearLayout android:gravity="center" android:orientation="vertical" android:tag="binding_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:src="@drawable/weather_error" android:scaleType="fitXY"/>
            <TextView android:textSize="19sp" android:textColor="@android:color/white" android:tag="binding_7" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:textSize="17sp" android:id="@+id/bt_a" android:tag="binding_8" android:visibility="gone" android:drawablePadding="10dp" android:layout_below="@+id/tv_city" style="@style/id8_main_card_desc"/>
        <TextView android:textSize="17sp" android:id="@+id/bt_b" android:tag="binding_9" android:visibility="gone" android:drawablePadding="10dp" android:layout_below="@+id/tv_city" android:layout_marginStart="150dp" style="@style/id8_main_card_desc"/>
        <TextView android:textSize="17sp" android:id="@+id/bt_c" android:tag="binding_10" android:visibility="gone" android:layout_marginTop="4dp" android:drawablePadding="10dp" android:layout_below="@+id/bt_a" style="@style/id8_main_card_desc"/>
        <RelativeLayout android:gravity="left" android:id="@+id/temperature" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_below="@+id/tv_city">
            <TextView android:textSize="86sp" android:textColor="@android:color/white" android:id="@+id/temperature_tv" android:tag="binding_11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" style="@style/bmw_id8_text_shadow"/>
            <FrameLayout android:id="@+id/temperature_range" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/temperature_tv">
