<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/ll_container" android:tag="layout/fragment_pemp_weather_0" style="@style/id8_main_card_container">
    <ImageView android:tag="binding_1" style="@style/id8_pemp_main_card_size"/>
    <ImageView android:id="@+id/iv_mask" android:tag="binding_2" style="@style/id8_pemp_main_card_size"/>
    <RelativeLayout android:tag="binding_3" style="@style/id8_pemp_main_card_container">
