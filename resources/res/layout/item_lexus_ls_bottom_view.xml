<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.CardView android:layout_width="wrap_content" android:layout_height="wrap_content" app:cardUseCompatPadding="true">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/icon" android:layout_width="80dp" android:layout_height="80dp" android:scaleType="fitXY" android:layout_centerHorizontal="true"/>
            <TextView android:textSize="23sp" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/icon"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
